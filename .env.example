# ==========================================
# AhaTutor 环境变量配置
# ==========================================

# 应用配置
NODE_ENV=development
PORT=3001
FRONTEND_PORT=5173
API_BASE_URL=http://localhost:3001

# ==========================================
# LLM 配置（至少配置一个）
# ==========================================

# OpenAI 配置
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Anthropic Claude 配置
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# DeepSeek 配置（国产模型）
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_MODEL=deepseek-chat

# Kimi 配置（国产模型）
KIMI_API_KEY=your_kimi_api_key_here
KIMI_BASE_URL=https://api.moonshot.cn
KIMI_MODEL=moonshot-v1-128k

# GLM 配置（智谱 AI）
GLM_API_KEY=your_glm_api_key_here
GLM_BASE_URL=https://open.bigmodel.cn/api/paas/v4
GLM_MODEL=glm-4-flash
GLM_EMBEDDING_MODEL=embedding-2
GLM_VISION_MODEL=glm-4v

# 默认 LLM 提供商（openai | claude | deepseek | kimi | glm）
DEFAULT_LLM_PROVIDER=glm

# ==========================================
# 向量数据库配置（至少配置一个）
# ==========================================

# Pinecone 配置
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX_NAME=ahatutor

# Weaviate 配置
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=your_weaviate_api_key_here

# ==========================================
# 图数据库配置（Neo4j）
# ==========================================
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=ahatutor123

# ==========================================
# 缓存配置（Redis）
# ==========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ==========================================
# 关系数据库配置（PostgreSQL）
# ==========================================
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=ahatutor
DB_PASSWORD=ahatutor123
DB_DATABASE=ahatutor

# ==========================================
# 对象存储配置（MinIO/S3）
# ==========================================
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=ahatutor-docs
MINIO_USE_SSL=false

# ==========================================
# OCR 服务配置
# ==========================================
# 使用 OpenAI Vision API 或其他 OCR 服务
OCR_ENGINE=openai

# ==========================================
# 文档解析配置
# ==========================================
# MinerU 输出目录（遗传学教材）
# 请根据实际情况修改为你的 MinerU 输出路径
MINERU_OUTPUT_DIR=/path/to/mineru/output

# ==========================================
# 日志配置
# ==========================================
LOG_LEVEL=debug
LOG_FILE=logs/app.log

# ==========================================
# 联网搜索配置（可选）
# ==========================================
# 使用 SerpAPI 或其他搜索 API
SEARCH_API_KEY=your_search_api_key_here
SEARCH_ENGINE=google

# ==========================================
# 前端配置
# ==========================================
VITE_API_BASE_URL=http://localhost:3001
VITE_WS_URL=ws://localhost:3001
