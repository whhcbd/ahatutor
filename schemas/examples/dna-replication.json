  "data": {
    "process": {
      "steps": [
        {
          "step": 1,
          "name": "解旋",
          "description": "解旋酶解开DNA双螺旋结构，形成复制叉",
          "duration": "约30秒",
          "components": ["解旋酶", "单链结合蛋白"],
          "products": ["两条单链DNA模板"]
        },
        {
          "step": 2,
          "name": "引物合成",
          "description": "引物酶合成RNA引物，为DNA聚合酶提供3'-OH",
          "duration": "约10秒",
          "components": ["引物酶"],
          "products": ["RNA引物"]
        },
        {
          "step": 3,
          "name": "DNA链延伸",
          "description": "DNA聚合酶以母链为模板，合成新的DNA链",
          "duration": "约5分钟",
          "components": ["DNA聚合酶", "脱氧核苷酸"],
          "products": ["前导链", "后随链（冈崎片段）"]
        },
        {
          "step": 4,
          "name": "RNA引物切除与填补",
          "description": "DNA聚合酶I切除RNA引物并填补缺口",
          "duration": "约30秒",
          "components": ["DNA聚合酶I"],
          "products": ["连续的DNA链"]
        },
        {
          "step": 5,
          "name": "连接",
          "description": "DNA连接酶连接DNA片段，形成完整的DNA分子",
          "duration": "约10秒",
          "components": ["DNA连接酶"],
          "products": ["完整的子代DNA分子"]
        }
      ],
      "totalDuration": "约6分钟",
      "startingMaterials": ["亲代DNA分子", "脱氧核苷酸", "ATP", "Mg²⁺"],
      "finalProducts": ["2个相同的子代DNA分子"]
    }
  },
