{
  "name": "ahatutor",
  "version": "0.1.0",
  "description": "AhaTutor - 遗传学可视化交互解答平台",
  "private": true,
  "workspaces": [
    "src/frontend",
    "src/backend",
    "src/shared"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm dev:frontend\" \"pnpm dev:backend\"",
    "dev:frontend": "cd src/frontend && pnpm dev",
    "dev:backend": "cd src/backend && pnpm start:dev",
    "build": "pnpm build:frontend && pnpm build:backend",
    "build:frontend": "cd src/frontend && pnpm build",
    "build:backend": "cd src/backend && pnpm build",
    "lint": "pnpm lint:frontend && pnpm lint:backend",
    "lint:frontend": "cd src/frontend && pnpm lint",
    "lint:backend": "cd src/backend && pnpm lint",
    "test": "pnpm test:frontend && pnpm test:backend",
    "test:frontend": "cd src/frontend && pnpm test",
    "test:backend": "cd src/backend && pnpm test"
  },
  "keywords": [
    "genetics",
    "education",
    "visualization",
    "rag",
    "llm",
    "agent"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.5.0"
  }
}
